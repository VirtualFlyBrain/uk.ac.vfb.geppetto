<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:osgi="http://www.springframework.org/schema/osgi"	
		xmlns:aop="http://www.springframework.org/schema/aop"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
							http://www.springframework.org/schema/osgi
							http://www.springframework.org/schema/osgi/spring-osgi-1.2.xsd
							http://www.springframework.org/schema/aop 
       						http://www.springframework.org/schema/aop/spring-aop-3.1.xsd">


	<osgi:service id="VFBAddImportTypesQueryProcessorExporter" ref="vfbAddImportTypesQueryProcessor"
		interface="org.geppetto.core.datasource.IDataSourceService">
	</osgi:service>
	<bean id="vfbAddImportTypesQueryProcessor" scope="prototype" class="uk.ac.vfb.geppetto.AddImportTypesQueryProcessor">
	<aop:scoped-proxy proxy-target-class="false"/>
	</bean>
	
	<osgi:service id="VFBAddTypesQueryProcessorExporter" ref="vfbAddTypesQueryProcessor"
		interface="org.geppetto.core.datasource.IDataSourceService">
	</osgi:service>
	<bean id="vfbAddTypesQueryProcessor" scope="prototype" class="uk.ac.vfb.geppetto.AddTypesQueryProcessor">
	<aop:scoped-proxy proxy-target-class="false"/>
	</bean>
	
	<bean id="eventListenerBean" class="org.geppetto.core.services.registry.ApplicationListenerBean" />
	
</beans>
